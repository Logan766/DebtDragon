<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:paddingVertical="18dp"
    android:paddingHorizontal="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CircImageView_FriendItem2"
        android:src="@drawable/avatar_profileavatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_color="@color/main"
        app:civ_border_width="3dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_FriendItem2_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/CircImageView_FriendItem2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/main"
        android:text="Jméno Příjmení" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_FriendItem2_Sum"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:drawablePadding="2dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

</androidx.constraintlayout.widget.ConstraintLayout>