<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".friends.ui.FriendDetailSummaryGraphFragment">

    <data>
        <variable
            name="viewmodel"
            type="tech.janhoracek.debtdragon.friends.viewmodels.FriendDetailViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_FriendDetailChildFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_graf_test"
            android:layout_marginBottom="35dp"
            android:text="@string/friend_detail_summary_graph_debt_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:textSize="12sp" />

    </FrameLayout>
</layout>